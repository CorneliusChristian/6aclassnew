    <script>
      var socket = io();
	  socket.emit('reqp')
      socket.on('poster', (msg) => {
        console.log(msg)
        for(var i = 0;i < (msg).length;i++){
          document.querySelector('#main').innerHTML += '<a href="/post/'+msg[i]['id']+'"><div class="p-4 bg-zinc-100/40 ring-1 ring-zinc-200 rounded-lg hover:ring-2 cursor-pointer my-4" style="word-wrap:break-word"><p class="text-stone-500/70 font-light text-base" style="font-weight: 300;font-family: \'Heavitas\';">Posted by u/admin</p><h1 style="font-family: Heavitas;font-weight: 550;" class="text-black/80 text-xl">--j</h1><a href="--i"><img src="--i" alt="" style="width: 100%;object-fit: cover;max-height:30rem" class="py-1 rounded-lg shadow-xl"></a><p style="font-family: Supreme;">--c</p></div></a>'.replace('--c', msg[i]['content']).replace('--j',  msg[i]['title']).replace('--i', msg[i]['image']).replace('--i', msg[i]['image']).replace(/\r?\n/g, '<br />');
          document.querySelector('#nothinghere').innerHTML = ''
        }
      })
    </script>
